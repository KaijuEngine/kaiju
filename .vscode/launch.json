	"version": "0.2.0",
	"configurations": [
		{
			"name": "Launch Windows Editor",
			"type": "go",
			"request": "launch",
			"mode": "auto",
			"program": "${workspaceFolder}/src",
			"cwd": "${workspaceFolder}",
			"buildFlags": "-tags=debug,editor",
			"env": {
				"CGO_ENABLED": "1"
			}
		}, {
			"name": "Launch Windows Runtime",
			"type": "go",
			"request": "launch",
			"mode": "auto",
			"program": "${workspaceFolder}/src",
			"cwd": "${workspaceFolder}",
			"env": {
				"CGO_ENABLED": "1"
			}
		}, {
			"name": "Launch X11 Editor",
			"type": "go",
			"request": "launch",
			"mode": "auto",
			"program": "${workspaceFolder}/src",
			"cwd": "${workspaceFolder}",
			"buildFlags": "-tags=editor,vulkanValidation",
			"env": {
				"CGO_ENABLED": "1"
			}
		}, {
			"name": "Launch X11 Runtime",
			"type": "go",
			"request": "launch",
			"mode": "auto",
			"program": "${workspaceFolder}/src",
			"cwd": "${workspaceFolder}",
			"env": {
				"CGO_ENABLED": "1"
			}
		},
		{
			"name": "Documentation Generator",
			"type": "go",
			"request": "launch",
			"mode": "auto",
			"program": "${workspaceFolder}/src/generators/api",
			"cwd": "${workspaceFolder}",
			"env": {
				"CGO_ENABLED": "1"
			}
		}
	]
}