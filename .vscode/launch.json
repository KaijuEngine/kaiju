	"version": "0.2.0",
	"configurations": [
		{
			"name": "Launch Windows Editor",
			"type": "go",
			"request": "launch",
			"mode": "auto",
			"program": "${workspaceFolder}",
			"buildFlags": "-tags editor",
			"env": {
				"CGO_LDFLAGS": "-lgdi32 -lOpenGL32"
			}
		}, {
			"name": "Launch Windows Runtime",
			"type": "go",
			"request": "launch",
			"mode": "auto",
			"program": "${workspaceFolder}",
			"buildFlags": "",
			"env": {
				"CGO_LDFLAGS": "-lgdi32 -lOpenGL32"
			}
		}, {
			"name": "Launch X11 Editor",
			"type": "go",
			"request": "launch",
			"mode": "auto",
			"program": "${workspaceFolder}",
			"buildFlags": "-tags editor",
			"env": {
				"CGO_LDFLAGS": "-lX11 -lGL"
			}
		}, {
			"name": "Launch X11 Runtime",
			"type": "go",
			"request": "launch",
			"mode": "auto",
			"program": "${workspaceFolder}",
			"buildFlags": "",
			"env": {
				"CGO_LDFLAGS": "-lX11 -lGL"
			}
		}
	]
}