{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "go",
			"label": "Generate tag files",
			"command": "test",
			"args": ["${workspaceFolder}/src/build/tag_generator"],
			"options": {
				"cwd": "${workspaceFolder}/src"
			},
			"problemMatcher": ["$go"],
			"group": "build",
			"detail": "Generate build tab booleans listed in tag_generator.go"
		}, {
			"type": "go",
			"label": "go: build workspace",
			"command": "build",
			"args": [
				"-C",
				"${workspaceFolder}/src",
				"-tags=editor",
				"-o=../kaiju.exe",
				"main.go"
			],
			"problemMatcher": [
				"$go"
			],
			"group": "build",
			"detail": "go build ${workspaceFolder}/src",
		}
	]
}